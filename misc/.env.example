# =============================================================================
# SideSeat Telemetry Samples - Environment Configuration
# =============================================================================
# Copy to .env and fill in your values

# -----------------------------------------------------------------------------
# OpenTelemetry Configuration (all frameworks)
# -----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:5388/otel/default
OTEL_SERVICE_NAME=telemetry-sample
OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true

# -----------------------------------------------------------------------------
# AWS Credentials (for Strands, LangGraph, and CrewAI using Bedrock)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_BEARER_TOKEN_BEDROCK=

# AWS AgentCore (for agent_core sample)
# Create a memory store and strategy in AWS Bedrock AgentCore console
# Find via: boto3 bedrock-agentcore-control client list_memories / get_memory
AGENT_CORE_MEMORY_ID=
AGENT_CORE_MEMORY_STRATEGY_ID=
S3_BUCKET_NAME=
IMAGE_GEN_MODEL=
# -----------------------------------------------------------------------------
# Anthropic API
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Google API 
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# OpenAI API 
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
